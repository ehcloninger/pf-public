<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:baselineAligned="false" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:height="44dip"
                android:saveEnabled="false"
                android:text="@string/starter_time"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="36dip"
                android:textStyle="bold"
                android:typeface="sans" />

            <TextView
                android:id="@+id/speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:height="44dip"
                android:saveEnabled="false"
                android:text="@string/starter_speed_land"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="36dip"
                android:typeface="sans" />
            <TextView
                android:id="@+id/battery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:height="42dip"
                android:paddingLeft="3dip"
                android:paddingRight="3dip"
                android:saveEnabled="false"
                android:text="@string/starter_battery"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="36dip"
                android:typeface="sans" android:gravity="center_horizontal"/>
            </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_weight="1"
                android:background="@drawable/transparent"
                android:clickable="true"
                android:contentDescription="@string/desc_phone"
                android:hapticFeedbackEnabled="true"
                android:onClick="btnClickedPhone"
                android:src="@drawable/ics_phone" />

            <ImageButton
                android:id="@+id/googlemaps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_weight="1"
                android:background="@drawable/transparent"
                android:clickable="true"
                android:contentDescription="@string/desc_googlemaps"
                android:hapticFeedbackEnabled="true"
                android:onClick="btnClickedGoogleMaps"
                android:src="@drawable/ics_maps" />

            <ImageButton
                android:id="@+id/places"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_weight="1"
                android:background="@drawable/transparent"
                android:clickable="true"
                android:contentDescription="@string/desc_places"
                android:hapticFeedbackEnabled="true"
                android:onClick="btnClickedPlaces"
                android:src="@drawable/ics_places" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/music"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_weight="1"
                android:background="@drawable/transparent"
                android:clickable="true"
                android:contentDescription="@string/desc_music"
                android:hapticFeedbackEnabled="true"
                android:onClick="btnClickedMusic"
                android:src="@drawable/ics_music" />

            <ImageButton
                android:id="@+id/voicesearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_weight="1"
                android:background="@drawable/transparent"
                android:clickable="true"
                android:contentDescription="@string/desc_voicesearch"
                android:hapticFeedbackEnabled="true"
                android:onClick="btnClickedVoiceSearch"
                android:src="@drawable/ics_voicesearch" />

            <ImageButton
                android:id="@+id/home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_weight="1"
                android:background="@drawable/transparent"
                android:clickable="true"
                android:contentDescription="@string/desc_home"
                android:hapticFeedbackEnabled="true"
                android:onClick="btnClickedHome"
                android:src="@drawable/ics_home" />
        </LinearLayout>


</LinearLayout>